<div id="page-wrapper">
  <div class="row">
    <!--   <div class="col-lg-12">
          <h1 class="page-header">Pedidos</h1>
      </div>
      <!-- /.col-lg-12 -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Listando Pedidos</h2>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Pedido</th>
                <th>Status</th>
                <th>Data/Hora </th>
                <th>Produtos </th>
                <th> </th>
              </tr>
            </thead>
            <tbody>
              <% @pedidos_aguardando.each do |pedido| %>
                <tr>
                  <td>
                    <%= link_to detalhes_backoffice_filtrado_filtrado_path(pedido), target: '_blank' do%>
                    <i class="fa fa-edit"></i>
                    <% end %>
                  </td>

                  <td>
                    <%=pedido.status%>
                  </td>
                  <td>
                    <%=pedido.created_at%>
                  </td>
                  <!--<th><%=pedido.produtos.first.produto %></th>-->
                  <td>
                    <%=pedido.produtos.pluck (:produto)%>
                  </td>

                  <td width="50px">
                    <%= link_to edit_backoffice_pedido_path(pedido), class:"btn btn-primary btn-circle" do %>
                      <i class="fa fa-edit"></i>
                      <% end %>
                  </td>
                </tr>
                <% end %>
            </tbody>


          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
  </div>
</div>
