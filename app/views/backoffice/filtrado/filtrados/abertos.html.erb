<div id="page-wrapper">
  <div class="row">
    <!--   <div class="col-lg-12">
          <h1 class="page-header">Pedidos</h1>
      </div>
      <!-- /.col-lg-12 -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Listando Pedidos</h2>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="apple_pagination">
          <%= will_paginate @pedido_aguardando, :container => false %>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Pedido</th>
                <th>Status</th>
                <th>Data do pedido </th>
                <th>Cliente </th>
                <th> </th>
              </tr>
            </thead>
            <tbody>
              <% @pedido_aguardando.each do |pedido| %>
                <tr>
                  <td>
                    <%= link_to pedido.id, detalhes_backoffice_filtrado_filtrado_path(pedido), target: '_blank' %>
                  </td>
                  <td>
                    <%=pedido.pedido.status%>
                  </td>
                  <td>
                    <%= post_date pedido.pedido.created_at %>
                  </td>
                  <td>
                    <%= pedido.nome %>
                  </td>
                  <td width="50px">
                    <%= link_to edit_backoffice_pedido_path(pedido), class:"btn btn-primary btn-circle" do %>
                      <i class="fa fa-edit"></i>
                      <% end %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
  </div>
</div>