<div id="page-wrapper">
  <div class="row">
<h1 class="page-header">Administradores</h1>
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= action %>
    </div>
    
    <div class="panel-body">
      <div class="col-lg-6">

       <%= form_for([:backoffice, @admin]) do |f| %>

        <div class="form-group">
           <label>Nome</label>
           <%= f.text_field :name, class: "form-control", placeholder: "Ex.: Joao" %>
        </div>
        <div class="form-group">
           <label>Email</label>
           <%= f.text_field :email, class: "form-control", placeholder: "Ex.: exemplo@exemplo.com" %>
        </div>

        



        <div class="form-group">
           <label>Senha</label>
           <%= f.password_field :password, class: "form-control", placeholder: "Mínimo 6 caracteres" %>
        </div>

        <div class="form-group">
           <label>Senha - Confirmação</label>
           <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repita a senha" %>
        </div>


        <button type="submit" class="btn btn-default">Salvar</button>
      <% end %>

     </div>
    </div>
  </div>
      </div>
    </div>
      