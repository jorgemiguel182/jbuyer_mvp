<div id="page-wrapper">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Painel de controle</h1>
      </div>
      <div class="panel-body">

        <div class="col-lg-3 col-md-6">
          <div class="panel panel-red">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-3">
                  <i class="fa fa-shopping-cart fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                  <div class="huge">
                    <%= @pedido_aguardando.count %>
                  </div>
                  <div>Pedidos Abertos!</div>
                </div>
              </div>
            </div>
            <%= link_to  backoffice_filtrado_filtrados_abertos_path do %>
              <div class="panel-footer">
                <span class="pull-left">View Details</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
              </div>
              <% end %>
          </div>
        </div>

        <div class="col-lg-3 col-md-6">
          <div class="panel panel-yellow">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-3">
                  <i class="fa fa-rocket fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                  <div class="huge">
                    <%= @pedido_em_atendimento.count %>
                  </div>
                  <div>Em Atendimento!</div>
                </div>
              </div>
            </div>
            <%= link_to  backoffice_filtrado_filtrados_abertos_path do %>
              <div class="panel-footer">
                <span class="pull-left">View Details</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
              </div>
              <% end %>
          </div>
        </div>

        <div class="col-lg-3 col-md-6">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-3">
                  <i class="fa fa-road fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                  <div class="huge"><%= @pedido_finalizado_no_dia.count %></div>
                  <div>Finalizados no dia!</div>
                </div>
              </div>
            </div>
            <%= link_to  backoffice_filtrado_filtrados_fexados_path do %>
              <div class="panel-footer">
                <span class="pull-left">View Details</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
              </div>
            <% end %>
            </a>
          </div>
        </div>

      </div>
    </div>
  </div>
