<div id="page-wrapper">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Listando Produtos</h2>
      </div>
      
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="apple_pagination">
          <%= will_paginate @produtos, :container => false %>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Desc. Produto</th> 
                <th>Qtd. Estoque </th>
                <th>Valor de compra </th>
                <th>Valor de venda</th>
                <th>Tipo de produto </th>
                
                <th>Foto</th>
                
              </tr>
            </thead>
            <tbody>
              <% @produtos.each do |produto| %>
                <tr>
                  <td>
                    <%= produto.id %>
                  </td>
                  <td>
                    <%= produto.produto %>
                  </td>
                  <td>
                    <%= produto.desc_produto %>
                  </td>
                  <td>
                    <%= produto.qtd_estoque %>
                  </td>
                  <td>
                    <%= produto.valor_pago %>
                  </td>
                  <td>
                    <%= produto.valor_venda %>
                  </td>
                  <td>
                    <% unless produto.tipo_produto.nil? %>
                      <%= produto.tipo_produto.nome_tipo %>
                    <% end %>                               
                  </td>
                  <td>
                    
                    <%= image_tag produto.foto.url(:thumb) %>
                  </td>
                </tr>
                <% end %>
              
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
        
        <div>
            <%= link_to new_backoffice_produto_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
            <i class="fa fa-plus"></i>
            <% end %>          
        </div>
        
      </div>
      <!-- /.panel-body -->
    </div>
  </div>
</div>